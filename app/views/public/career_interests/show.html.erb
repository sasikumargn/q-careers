<%= clear_tag(30) %>

<%# Renders a partial to display all the events %>
<div class="row">

  <div id="div_event_details" class="col-sm-6">
    <% begin %>
      <%= render partial: @event.slug %>
    <% rescue %>
      <%= image_tag "advertisement#{[1,2,3,1,2,3,1,2,3,1,2,3].sample}.png", width: "100%" %>
    <% end %>
    <div class="visible-xs cl-10"></div>
  </div>

  <div id="div_event_form" class="col-sm-6">
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>Hurray!</strong> You have successfully enrolled for the '<%= @event.name %>'. Your Application ID is <strong><%= @career_interest.application_id %></strong>. Keep this ID for future reference.
    </div>

    <%= render :partial=>"public/events/show", :locals=>{:event=>@event, show_apply_button: false} %>
  </div>

</div>

<%= clear_tag(30) %>
