<% if @career_interests.any? %>
	// Fill the right box with first career_interest details in the list
	$('#div_career_interest_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

	// Rendering the item list
	$('#div_career_interest_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	// $('#div_career_interest_drop_down').html("<%#= escape_javascript(theme_drop_down(@career_interests, :applicant_name)) %>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
	$('#div_career_interest_index').html(noResultsText);
	$('#div_career_interest_details').html(noResultsText);
<% end %>