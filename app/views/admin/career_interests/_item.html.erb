<div class="panel panel-default media p-5">
  <% fresher = career_interest.candidate %>
  <a class="media-left" href="#">
    <%= display_image(fresher, "logo.image.url",
                        width: "60px",
                        place_holder: {
                          width: 80,
                          height: 90,
                          text: fresher.namify}
                        ) %>
  </a>
  <div class="media-body">
    <%= theme_item_title(fresher.name, main_app.admin_event_career_interest_path(@event, career_interest)) %>
    <%= theme_item_sub_title("#{fresher.year_of_passing} Graduate") %>
    <%= theme_item_description("#{fresher.current_city} (#{fresher.native_city})") %>
  </div>
</div>